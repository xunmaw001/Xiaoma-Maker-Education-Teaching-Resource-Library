<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.ClazzDao">




















    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        a.id as id
        ,a.clazz_name as clazzName
        ,a.clazz_address as clazzAddress
        ,a.insert_time as insertTime
        ,a.create_time as createTime
    </sql>
    <select id="selectListView" parameterType="map" resultType="com.entity.view.ClazzView" >
        SELECT
        <include refid="Base_Column_List" />

--         级联表的字段

        FROM clazz  a

        <where>
            <if test="params.ids != null">
                and a.id in
                <foreach item="item" index="index" collection="params.ids" open="(" separator="," close=")">
                #{item}
                </foreach>
            </if>
            <if test=" params.clazzName != '' and params.clazzName != null and params.clazzName != 'null' ">
                and a.clazz_name like CONCAT('%',#{params.clazzName},'%')
            </if>
            <if test=" params.clazzAddress != '' and params.clazzAddress != null and params.clazzAddress != 'null' ">
                and a.clazz_address like CONCAT('%',#{params.clazzAddress},'%')
            </if>
            <if test=" params.insertTimeStart != '' and params.insertTimeStart != null ">
                <![CDATA[  and UNIX_TIMESTAMP(a.insert_time) >= UNIX_TIMESTAMP(#{params.insertTimeStart}) ]]>
            </if>
            <if test=" params.insertTimeEnd != '' and params.insertTimeEnd != null ">
                <![CDATA[  and UNIX_TIMESTAMP(a.insert_time) <= UNIX_TIMESTAMP(#{params.insertTimeEnd}) ]]>
            </if>

        </where>

        order by a.${params.orderBy} desc 
    </select>

</mapper>